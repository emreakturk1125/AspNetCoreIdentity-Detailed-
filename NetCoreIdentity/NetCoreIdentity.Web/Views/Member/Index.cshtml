@*@using NetCoreIdentity.Web.ViewModels*@    @*using'li ifadeyi burada eklemek yerine sadece _ViewImports içinde ekleyip heryerde kullanabilirsin*@
@model UserViewModel

@{ 
    ViewData["Title"] = "Index";
    Layout = "~/Views/Member/_Memberlayout.cshtml";
}

<h2 class="text-center">Kullanıcı Bilgileri</h2>
<div class="row">
    <div class="col-sm-3">
        <img style="width:100%;height:100%" src="@Model.Picture" />
    </div>
    <div class="col-sm-9">
        <table class="table table-striped">
            <tr>
                <th>Kullanıcı İsmi</th>
                <td>@Model.UserName</td>
            </tr>
            <tr>
                <th>E-posta</th>
                <td>@Model.Email</td>
            </tr>
            <tr>
                <th>Telefon No</th>
                <td>

                    @if (!String.IsNullOrEmpty(Model.PhoneNumber))
                    {
                        @Model.PhoneNumber
                    }
                    else
                    {
                        <span>- Belirtilmemiş -</span>
                    }

                </td>
            </tr>
            <tr>
                <th>Şehir</th>
                <td>

                    @if (!String.IsNullOrEmpty(Model.City))
                    {
                        @Model.City
                    }
                    else
                    {
                      <span>- Belirtilmemiş -</span>
                    }

                </td>
            </tr>
            <tr>
                <th>Doğum Tarihi</th>
                <td>
                    @if (Model.Birthday != null)
                    {
                        @Model.Birthday?.ToShortDateString()
                    }
                    else
                    {
                        <span>- Belirtilmemiş -</span>
                    }
                </td>
            </tr>
            <tr>
                <th>Cinsiyet</th>
                <td>@Model.Gender</td>
            </tr>
        </table>
    </div>
</div>