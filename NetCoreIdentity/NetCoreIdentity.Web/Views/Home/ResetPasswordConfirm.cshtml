@model NetCoreIdentity.Web.ViewModels.PasswordResetViewModel

@{
    ViewData["Title"] = "ResetPasswordConfirm";
}

 
<div class="row">
    <div class="col-md-4 offset-md-4">

        @if (ViewBag.Status == "success")
        {
            <div class="alert alert-success">
                @ViewBag.Message
            </div>
            <a class="btn btn-link" asp-action="Login" asp-controller="Home">Giriş için tıklayınız.</a>
        }
        else
        {
            <h4>Şifre yenileme</h4>
            <hr />
            <form asp-action="ResetPasswordConfirm">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="PasswordNew" class="control-label"></label>
                    <input asp-for="PasswordNew" class="form-control" />
                    <span asp-validation-for="PasswordNew" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="PasswordNew2" class="control-label"></label>
                    <input asp-for="PasswordNew2" class="form-control" />
                    <span asp-validation-for="PasswordNew2" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Şifre Oluştur" class="btn btn-primary" />
                </div>
            </form>
        }
    </div>

</div>

 

