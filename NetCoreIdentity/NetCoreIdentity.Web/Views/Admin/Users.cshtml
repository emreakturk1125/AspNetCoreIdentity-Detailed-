@model List<AppUser>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Admin/_AdminLayout.cshtml";
}

<h4>Üyeler</h4>

<hr />

<table class="table table-bordered table-striped">
    <tr>
        <td>User Id</td>
        <td>User Name</td>
        <td>Email</td>
        <td>Roller</td>
    </tr>

    @if (Model.Count() == 0)
    {
        <tr>
            <td colspan="3">Hiç bir üye yoktur.</td>
        </tr>
    }
    else
    {
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.UserName</td>
                <td>@item.Email</td>
                <td user-roles="@item.Id"></td>  @* 1.) _ViewImports.cshtml de tag helper eklenmelidir*@  @* 2.) CustomTagHelper/UserRolesName.cs *@ 
                <td> <a class="btn btn-primary" asp-action="RoleAssign" asp-route-id="@item.Id">Rol Ata</a> </td>
            </tr>
        }
    }

</table>

